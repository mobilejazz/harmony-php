{
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier --ignore-unknown",
    "prettier-check": "prettier --check core sample/src",
    "prettier-write": "prettier --ignore-unknown --write core sample/src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.php": "php -l"
  },
  "devDependencies": {
    "@prettier/plugin-php": "0.18.*",
    "husky": "7.0.*",
    "lint-staged": "12.3.*",
    "prettier": "2.6.*"
  }
}
